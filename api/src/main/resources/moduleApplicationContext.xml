<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:component-scan base-package="org.openmrs.module.clientregistry"/>

  <!-- Wraps ClientRegistryService methods in DB transactions and OpenMRS interceptors,
  which set audit info like dateCreated, changedBy, etc.-->
  <bean id="clientregistry.ClientRegistryService"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
    <property name="transactionManager">
      <ref bean="transactionManager"/>
    </property>
    <property name="target">
      <bean class="org.openmrs.module.clientregistry.api.impl.ClientRegistryServiceImpl">
        <property name="dao" ref="clientregistry.ClientRegistryDao"/>
      </bean>
    </property>
    <property name="preInterceptors">
      <ref bean="serviceInterceptors"/>
    </property>
    <property name="transactionAttributeSource">
      <ref bean="transactionAttributeSource"/>
    </property>
  </bean>

  <!-- Adds ClientRegistryService to OpenMRS context so it can be accessed
  calling Context.getService(ClientRegistryService.class) -->
  <bean parent="serviceContext">
    <property name="moduleService">
      <list>
        <value>org.openmrs.module.clientregistry.api.ClientRegistryService</value>
        <ref bean="clientregistry.ClientRegistryService"/>
      </list>
    </property>
  </bean>
</beans>
